{
  "name": "jstnedr",
  "version": "0.0.1",
  "description": "Host Next.js SSR app on Firebase Cloud Functions with Firebase Hosting redirects.",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "dev": "next \"src/app/\"",
    "preserve": "npm run build-public && npm run build-funcs && npm run build-app && npm run copy-deps && npm run install-deps",
    "serve": "cross-env NODE_ENV=production firebase serve",
    "predeploy": "npm run build-public && npm run build-funcs && npm run build-app && npm run copy-deps",
    "deploy": "firebase deploy",
    "clean": "rimraf \"dist/functions/**\" && rimraf \"dist/public\"",
    "build-public": "cpx \"src/app/public/**/*.*\" \"dist/public\" -C",
    "build-funcs": "babel \"src/functions\" --out-dir \"dist/functions\"",
    "build-app": "next build \"src/app/\"",
    "copy-deps": "cpx \"*{package.json,package-lock.json,yarn.lock}\" \"dist/functions\" -C",
    "install-deps": "cd \"dist/functions\" && npm i",
    "mermaid": "mmdc -i ./docs/layout.mmd -o star.svg",
    "help": "mmdc -h"
  },
  "dependencies": {
    "@mdx-js/loader": "^1.6.6",
    "@next/mdx": "^8.1.0",
    "firebase-admin": "^7.4.0",
    "firebase-functions": "^3.8.0",
    "glob": "^7.1.6",
    "gray-matter": "^4.0.2",
    "mermaid": "^8.5.2",
    "mermaid.cli": "^0.5.1",
    "next": "^9.4.0",
    "next-fonts": "^1.4.0",
    "next-optimized-images": "^2.6.1",
    "raw-loader": "^4.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-markdown": "^4.3.1",
    "remark": "^12.0.1",
    "remark-emoji": "2.0.1",
    "remark-images": "0.8.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@mdx-js/mdx": "0.15.0-0",
    "@zeit/next-mdx": "1.1.0",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.1",
    "firebase-tools": "^6.12.0",
    "rimraf": "^2.7.1"
  }
}
